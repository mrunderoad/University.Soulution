@{
  Layout = "_Layout";
}

@using University.Models;
@model List<University.Models.Student>;

<div class="jumbotron">
  <h1>Students</h1>
</div>

@if (@Model.Count == 0)
{
  <h3> No Students have been added yet!</h3>
}

@foreach (Student student in Model)
{
  <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId }) | @Html.DisplayFor(model => student.EnrollmentDate.Month)/@Html.DisplayFor(model => student.EnrollmentDate.Day)/@Html.DisplayFor(model => student.EnrollmentDate.Year)</li>
}

<p>@Html.ActionLink("Add new student", "Create")</p>
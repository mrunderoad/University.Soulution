@{
  Layout = "_Layout";
}

@using University.Models

<div class="jumbotron">
  <h1>Departments</h1>
</div>

@if (@Model.Count == 0)
{
  <h3>There are currently no avaliable departments!</h3>
}
<ul>
  @foreach(Department department in Model)
  {
    <li>@Html.ActionLink($"{department.DepartmentName}", "Details", new { id = department.DepartmentId })</li>
  }
</ul>
<hr />
<p>@Html.ActionLink("Add A New Department", "Create")</p>
@{
  Layout = "_Layout";
}

@model University.Models.Course

<div class="jumbotron">
  <h2>Edit</h2>
</div>

<h4>Edit this course: @Html.DisplayFor(model => model.CourseName) </h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.CourseId)
  @Html.LabelFor(model => model.CourseName)
  @Html.EditorFor(model => model.CourseName)
  @Html.LabelFor(model => model.CourseNum)
  @Html.EditorFor(model => model.CourseNum)

  <input type="submit" value="Save" />
}